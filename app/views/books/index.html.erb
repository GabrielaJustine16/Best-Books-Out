<h1>All Books</h1>

<% @books.each do |b| %>

  <h2><%= link_to book.title, book_path(b.id)%> - <%= b.author.name %> </h2>
  <%= link_to "Write a review", new_book_review_path%>
  <% if b.image.attached? %>
    <%= image_tag url_for(b.thumbnail)%>
  <% end %>
  <div>
    <p><%= b.description %></p>
  </div>